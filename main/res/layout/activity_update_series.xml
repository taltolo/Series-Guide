<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateSeriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Update Series"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

        <EditText
            android:id="@+id/editTextSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Series Name"
            android:scrollbarDefaultDelayBeforeFade="250" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewUpdateseason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="Update season :"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/edit_SeasonsUpdate"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <TextView
            android:id="@+id/generView2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center|left"
            android:text="gener"
            android:textSize="18sp" />
         <!--
                <Spinner
                    android:id="@+id/planets_arrayUp"
                    android:layout_width="match_parent"
                    android:ut_height="37dp"
                    android:background="@android:drawable/btn_dropdown" />
                <EditText
                    android:id="@+id/editText_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Genre" />


                    <Button
                        android:id="@+id/button_uploadImage"
                        android:layout_width="113dp"
                        android:layout_height="30dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="upload" />

                    -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewUpload"
                android:layout_width="179dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

        <TextView
            android:id="@+id/rateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate your series:"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:theme="@style/RatingBar" />


        <Button
            android:id="@+id/button_update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/colorPrimary"
            android:text="Update"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"

            android:text="Delete"
            android:textAllCaps="false" />


    </LinearLayout>


</RelativeLayout>